<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.cheezycode.notesample.ui.note.MainFragment"
        android:label="MainFragment">
        <action
            android:id="@+id/action_mainFragment_to_noteFragment"
            app:destination="@id/noteFragment" />
        <action
            android:id="@+id/action_mainFragment_to_user_settings2"
            app:destination="@id/user_settings" />
        <action
            android:id="@+id/action_mainFragment_to_trash2"
            app:destination="@id/trash2" />
        <action
            android:id="@+id/action_mainFragment_to_manageAccount"
            app:destination="@id/manageAccount" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.cheezycode.notesample.ui.login.RegisterFragment"
        android:label="RegisterFragment">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.cheezycode.notesample.ui.login.LoginFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/noteFragment"
        android:name="com.cheezycode.notesample.ui.note.NoteFragment"
        android:label="NoteFragment" />
    <fragment
        android:id="@+id/splash"
        android:name="com.cheezycode.notesample.splash"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splash_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/user_settings"
        android:name="com.cheezycode.notesample.ui.profile.user_settings"
        android:label="fragment_user_settings"
        tools:layout="@layout/fragment_user_settings" >
        <action
            android:id="@+id/action_user_settings_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_user_settings_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_user_settings_to_faq2"
            app:destination="@id/faq2" />
        <action
            android:id="@+id/action_user_settings_to_help_support2"
            app:destination="@id/help_support2" />
        <action
            android:id="@+id/action_user_settings_to_trash2"
            app:destination="@id/trash2" />
        <action
            android:id="@+id/action_user_settings_to_manageAccount"
            app:destination="@id/manageAccount" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.cheezycode.notesample.ui.profile.aboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/faq2"
        android:name="com.cheezycode.notesample.ui.profile.faq"
        android:label="fragment_faq"
        tools:layout="@layout/fragment_faq" />
    <fragment
        android:id="@+id/help_support2"
        android:name="com.cheezycode.notesample.ui.profile.help_support"
        android:label="fragment_help_support"
        tools:layout="@layout/fragment_help_support" />
    <fragment
        android:id="@+id/trash2"
        android:name="com.cheezycode.notesample.ui.profile.trash"
        android:label="fragment_trash"
        tools:layout="@layout/fragment_trash" >
        <action
            android:id="@+id/action_trash2_to_user_settings"
            app:destination="@id/user_settings" />
        <action
            android:id="@+id/action_trash2_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_trash2_to_manageAccount"
            app:destination="@id/manageAccount" />
    </fragment>
    <fragment
        android:id="@+id/manageAccount"
        android:name="com.cheezycode.notesample.ui.profile.ManageAccount"
        android:label="fragment_manage_account"
        tools:layout="@layout/fragment_manage_account" />
</navigation>
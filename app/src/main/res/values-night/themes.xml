<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteSample" parent="Theme.MaterialComponents.Light.NoActionBar">
    </style>


    <!--Light Mode-->
    <!--Screen background if light is on-->
    <style name="SCREEN">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SearchView">
        <item name="android:background">@drawable/search_view_bg_dark</item>
    </style>

    <style name="NotesBox">
        <item name="android:background">@drawable/search_view_bg_dark</item>
    </style>

    <style name="SettingsSCREENBtn">
        <item name="android:background">@drawable/button_round_back_night</item>
    </style>

    <style name="SettingsSCREEN">
        <item name="android:background">@color/black</item>
    </style>

    <!--Screen background if light is on-->
    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Screen background if light is on-->
    <style name="BUTTON">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Image background if light is on-->
    <style name="Image">
        <item name="tint">@color/white</item>
    </style>


</resources>